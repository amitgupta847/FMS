<inf:ViewBase x:Class="FMS.Modules.Infrastructure.Statusbar.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:inf="clr-namespace:FMS.Infrastructure;assembly=FMS.Infrastructure"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FMS.Modules.Infrastructure.Statusbar"
             
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StatusBar>
        <StatusBarItem>
            <TextBlock Text="{Binding Message}" />
        </StatusBarItem>
    </StatusBar>
</inf:ViewBase>
